<%- include("../header"); %>
<div class="col-12">
    <h1>Editar usuario</h1>
    <form method="post" action="/personas/actualizar">

        <input value="<%= persona.id %>" name="id" type="hidden">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= persona.nombre %>" required id="nombre" placeholder="Nombre del usuario"
                class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="apellido">apellido</label>
            <input value="<%= persona.apellido%>" required id="apellido" placeholder="Apellido del usuario"
                class="form-control" type="text" name="apellido">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/personas" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>